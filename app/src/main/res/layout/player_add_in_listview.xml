<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_name"
        android:textAlignment="center"
        android:textAppearance="@color/colorPrimaryDark"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jersey_number"
        android:layout_below="@id/player_name"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/player_name"
        android:id="@+id/player_type"
        android:src="@drawable/all_rounder"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_card_view"
        android:layout_below="@+id/player_type" />
</RelativeLayout>
